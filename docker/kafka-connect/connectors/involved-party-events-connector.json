{
  "name": "involved-party-events-to-elasticsearch",
  "config": {
    "connector.class": "io.aiven.kafka.connect.opensearch.OpensearchSinkConnector",
    "tasks.max": "2",
    "topics": "involved-party-events",
    "connection.url": "http://elasticsearch:9200",
    "connection.username": "${ELASTICSEARCH_USERNAME:}",
    "connection.password": "${ELASTICSEARCH_PASSWORD:}",
    "index": "involved-party-events-${timestamp:yyyy.MM.dd}",
    "type.name": "_doc",
    "key.ignore": "false",
    "document.id": "${eventId}",
    "transforms": "ExtractEventId",
    "transforms.ExtractEventId.type": "org.apache.kafka.connect.transforms.ExtractField$Value",
    "transforms.ExtractEventId.field": "eventId",
    "errors.tolerance": "all",
    "errors.deadletterqueue.topic.name": "dlq-involved-party-events",
    "errors.deadletterqueue.topic.replication.factor": "3",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter.schemas.enable": "false"
  }
}

